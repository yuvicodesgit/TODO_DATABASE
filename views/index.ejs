<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME</title>
</head>
<body style="background-color: rgb(0, 0, 0); color: aliceblue; font-family:Verdana, Geneva, Tahoma, sans-serif;">
    <a href="/create"><button  style="background: blue; border: none; color: white; padding: 4px; margin: 10px;">Create a Todo</button></a>
    <h2 style="text-align: center;">YOUR TODO'S</h2>
    <% if(todos.length ==0){%>
        <h4 style="text-align: center; margin-top: 20%;">No todos</h4>
        <% }%>
    <div style="display: flex; gap: 10px; flex-wrap: wrap;" class="todos">
        <% todos.forEach(function(todo){%>
            <div class="user" style="width: 370px; height: 180px; background: #000; display: flex; flex-direction: column; border: 1px solid aliceblue;">
                <span style="color: aliceblue; margin: 7px;">Title : <%= todo.title %></span>
                <span style="color: aliceblue; margin: 7px;">Description : <%= todo.desc %></span>
                <span style="color: aliceblue; margin: 7px;">Time :  <%= todo._id.getTimestamp() %></span>
                <div style="margin-top: 10px;">
                    <a style="color: lightblue; text-decoration: none; margin: 7px;" href="/edit/<%=todo._id%>">Edit Todo</a>
                    <a style="color: orangered;text-decoration: none; margin: 7px; " href="/delete/<%=todo._id%>">Remove Todo</a>
                </div>
            </div>
       <% })%>
    </div>
</body>
</html>